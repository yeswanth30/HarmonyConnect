<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="160dp"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/firstRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRelativeLayout67"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRelativeLayout"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#B2B7C6"
            android:background="@drawable/edit_text_border"
            android:padding="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:background="@android:color/transparent"
                android:drawablePadding="0dp"
                android:textColorHint="#B2B7C6"/>
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/secondRelativeLayout34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondRelativeLayout67"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#B2B7C6"
            android:background="@drawable/edit_text_border"
            android:padding="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTex034t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/baseline_email_24"
                android:drawablePadding="0dp"
                android:textColorHint="#B2B7C6"/>
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_below="@id/secondRelativeLayout34"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/secondRelativeLayout343344"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout34345435"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColorHint="#B2B7C6"
                android:background="@drawable/edit_text_border"
                android:padding="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTex034t342234"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Message"
                    android:background="@android:color/transparent"
                    android:drawablePadding="0dp"
                    android:textColorHint="#B2B7C6"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </ScrollView>



    <TextView
        android:id="@+id/loginButton444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll"
        android:layout_marginTop="20dp"
        android:text="Send Message"
        android:textAlignment="center"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />





</RelativeLayout>
