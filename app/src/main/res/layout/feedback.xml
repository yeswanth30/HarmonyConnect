<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="160dp"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/firstRelativeLayout2222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Us Feedback"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/textView112"
            android:layout_below="@+id/textView"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="How satisfied are you with our service?write afeedback to us"
            android:textSize="18sp"
            android:textColor="#B2B7C6" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/starts"
        android:layout_below="@id/firstRelativeLayout2222"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/star1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_star_empty"
            android:background="@drawable/box_background"

            android:clickable="true"
        android:onClick="onStarClick"
        android:tag="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/star2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_star_empty"
            android:background="@drawable/box_background"

            android:clickable="true"
            android:onClick="onStarClick"
            android:tag="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/star3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_star_empty"
            android:background="@drawable/box_background"

            android:clickable="true"
            android:onClick="onStarClick"
            android:tag="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/star4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_star_empty"
            android:background="@drawable/box_background"

            android:clickable="true"
            android:onClick="onStarClick"
            android:tag="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/star5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_star_empty"
            android:background="@drawable/box_background"

            android:clickable="true"
            android:onClick="onStarClick"
            android:tag="1"/>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll2334"
        android:layout_below="@id/starts"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/secondRelativeLayout343344"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout34345435"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColorHint="#B2B7C6"
                android:background="@drawable/edit_text_border"
                android:padding="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTex034t342234"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Message"
                    android:background="@android:color/transparent"
                    android:drawablePadding="0dp"
                    android:textColorHint="#B2B7C6"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </ScrollView>



    <TextView
        android:id="@+id/loginButton3333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll2334"
        android:layout_marginTop="20dp"
        android:text="Submit Now"
        android:textAlignment="center"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />



</RelativeLayout>
